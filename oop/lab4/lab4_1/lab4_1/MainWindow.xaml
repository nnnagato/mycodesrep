        <TextBox x:Name="tb3" Grid.Column="3" HorizontalAlignment="Left" Margin="790,61,0,0" TextWrapping="Wrap" Text="123" VerticalAlignment="Top" Width="120" TextChanged="tb3_TextChanged" Grid.Row="1"/>
